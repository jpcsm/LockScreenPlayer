<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/goods_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="브랜드"
            android:id="@+id/goodsbrand"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/goods_img"
            android:layout_toEndOf="@+id/goods_img"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상품명상품명"
            android:id="@+id/goodsname"
            android:layout_below="@+id/goodsbrand"
            android:layout_alignLeft="@+id/goodsbrand"
            android:layout_alignStart="@+id/goodsbrand"
            android:textSize="17dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.000 P"
            android:id="@+id/goodsprice"
            android:textSize="17dp"
            android:layout_below="@+id/goodsname"
            android:layout_alignLeft="@+id/goodsname"
            android:layout_alignStart="@+id/goodsname"
            android:textColor="#ff6200" />

    </RelativeLayout>
</LinearLayout>