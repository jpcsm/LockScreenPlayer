<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lockscreenplayer.js.lockscreenplayer.FilterCameraActivity">
    <com.lockscreenplayer.js.lockscreenplayer.Tutorial3View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_surface_view" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_camera"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/camerabtn"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RGB"
            android:id="@+id/RGB"
            android:layout_weight="1"
            android:onClick="onclickRGB" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRAY"
            android:id="@+id/GRAY"
            android:layout_weight="1"
            android:onClick="onclickGRAY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANNY"
            android:id="@+id/CANNY"
            android:layout_weight="1"
            android:onClick="onclickCANNY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEATURES"
            android:id="@+id/FEATURES"
            android:layout_weight="1"
            android:onClick="onclickFEATURES" />
    </LinearLayout>

</RelativeLayout>
